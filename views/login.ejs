<body>
  <div class = "wrapper">
    <div class ="cont">
      <div class = "signup-container">
        <form action = "/users//login" method = "POST">
          <div class = "top">
            <span>Don't have an account? <a href="signup">Sign Up</a></span>
            <header>Login</header>
          </div>
          <div class =  "input-box">
            <input type = "text" class = "input-field" placeholder="Type your Email here" name = "email">
            <i class = "bx bx-envelope"></i>
          </div>
          <div class =  "input-box">
            <input type = "password" class = "input-field" placeholder="Enter a password" name = "password">
            <i class = "bx bx-lock-alt"></i>
          </div>
          <div class="input-box">
            <input type="submit" class = "submit" value = "Sing In">
          </div>
          <div class="two-col">
            <div class="one">
                <input type="checkbox" id = "register-check">
                <label for = "register-check">Remember Me </label>
            </div>
            <div class="two">
                <label><a href = "#">Terms & Conditions</a></label>
            </div>                
          </div>
        </form>
      </div>
    </div>
